<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yangpeiwen.bluetoothcar.Controller">

    <TextView
        android:id="@+id/textView_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="状态:未连接" />

    <TextView
        android:id="@+id/textView_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_state"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_w"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:text="w"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_a"
        android:layout_toEndOf="@+id/button_a" />

    <Button
        android:id="@+id/button_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_alignTop="@+id/button_w"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_a"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:text="a"
        android:layout_below="@+id/button_w"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_d"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:text="d"
        android:layout_alignTop="@+id/button_s"
        android:layout_toRightOf="@+id/button_s"
        android:layout_toEndOf="@+id/button_s" />

    <Button
        android:id="@+id/button_s"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:text="s"
        android:layout_alignBottom="@id/button_a"
        android:layout_toRightOf="@+id/button_a"
        android:layout_toEndOf="@+id/button_a" />

    <Button
        android:id="@+id/button_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="z"
        android:layout_alignTop="@+id/button_d"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接"
        android:id="@+id/button"
        android:onClick="lianjie"
        android:layout_above="@+id/textView_rec"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/button_f"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_d"
        android:layout_alignEnd="@+id/button_d" />
</RelativeLayout>
